{
  "$schema": "http://json.schemastore.org/template",
  "author": "hk-modding",
  "classifications": [ "Class Library" ],
  "identity": "HKModding.HKMPAddonTemplate.CSharp",
  "name": "Template for HKMP add-ons.",
  "shortName": "hkmpaddon",
  "symbols": {
    "modName": {
      "description": "The name of your mod.",
      "type": "parameter",
      "replaces": "{modName}",
      "defaultValue": "HKMod",
      "fileRename": "ModName"
    },
    "modAuthor": {
      "description": "The mod's author, i.e. your name.",
      "type": "parameter",
      "replaces": "{modAuthor}",
      "defaultValue": ""
    },
    "modDescription": {
      "description": "A description of the mod.",
      "type": "parameter",
      "replaces": "{modDescription}",
      "defaultValue": "An HKMP add-on."
    },
    "hkRefsPath1": {
      "description": "The first location of your project references.",
      "type": "parameter",
      "replaces": "{hkRefsPath1}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    },
    "hkRefsPath2": {
      "description": "The second location of your project references.",
      "type": "parameter",
      "replaces": "{hkRefsPath2}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    }
  },
  "tags": {
    "language": "C#",
    "type": "project"
  }
}
