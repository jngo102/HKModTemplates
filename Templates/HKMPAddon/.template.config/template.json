{
  "$schema": "http://json.schemastore.org/template",
  "author": "hk-modding",
  "classifications": [ "Class Library" ],
  "identity": "HKModding.HKMPAddonTemplate.CSharp",
  "name": "Template for HKMP add-ons.",
  "shortName": "hkmpaddon",
  "symbols": {
    "name": {
      "description": "The name of your add-on.",
      "type": "parameter",
      "replaces": "{name}",
      "defaultValue": "HKMPAddon",
      "fileRename": "Name"
    },
    "author": {
      "description": "The add-on's author, i.e. your name.",
      "type": "parameter",
      "replaces": "{author}",
      "defaultValue": ""
    },
    "description": {
      "description": "A description of the add-on.",
      "type": "parameter",
      "replaces": "{description}",
      "defaultValue": "An HKMP add-on."
    },
    "refsPath1": {
      "description": "The first location of your project references.",
      "type": "parameter",
      "replaces": "{refsPath1}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    },
    "refsPath2": {
      "description": "The second location of your project references.",
      "type": "parameter",
      "replaces": "{refsPath2}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    }
  },
  "tags": {
    "language": "C#",
    "type": "project"
  }
}
