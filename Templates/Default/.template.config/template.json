{
  "$schema": "http://json.schemastore.org/template",
  "author": "hk-modding",
  "classifications": [ "Class Library" ],
  "identity": "HKModding.DefaultTemplate.CSharp",
  "name": "Default Hollow Knight mod template.",
  "shortName": "hkmod",
  "symbols": {
    "name": {
      "description": "The name of your mod.",
      "type": "parameter",
      "replaces": "{name}",
      "defaultValue": "HKMod",
      "fileRename": "name"
    },
    "author": {
      "description": "The mod's author, i.e. your name.",
      "type": "parameter",
      "replaces": "{author}",
      "defaultValue": ""
    },
    "description": {
      "description": "A description of the mod.",
      "type": "parameter",
      "replaces": "{description}",
      "defaultValue": "A Hollow Knight mod."
    },
    "refsPath": {
      "description": "The location of your project references.",
      "type": "parameter",
      "replaces": "{refsPath}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    }
  },
  "tags": {
    "language": "C#",
    "type": "project"
  }
}
