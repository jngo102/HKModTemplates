{
  "$schema": "http://json.schemastore.org/template",
  "author": "hk-modding",
  "classifications": [ "Class Library" ],
  "identity": "HKModding.DefaultTemplate.CSharp",
  "name": "Default Hollow Knight mod template.",
  "shortName": "hkmod",
  "symbols": {
    "modName": {
      "description": "The name of your mod.",
      "type": "parameter",
      "replaces": "{modName}",
      "defaultValue": "HKMod",
      "fileRename": "ModName"
    },
    "modAuthor": {
      "description": "The mod's author, i.e. your name.",
      "type": "parameter",
      "replaces": "{modAuthor}",
      "defaultValue": ""
    },
    "modDescription": {
      "description": "A description of the mod.",
      "type": "parameter",
      "replaces": "{modDescription}",
      "defaultValue": "A Hollow Knight mod."
    },
    "hkRefsPath": {
      "description": "The location of Hollow Knight's Managed/ folder on your PC.",
      "type": "parameter",
      "replaces": "{hkRefsPath}",
      "defaultValue": "$(MSBuildProgramFiles32)/Steam/steamapps/common/Hollow Knight/hollow_knight_Data/Managed"
    }
  }
}
